{
    "name": "layoutist-core",
    "version": "1.0.0",
    "postcss": {
        "plugins": {
            "postcss-nested": {},
            "autoprefixer": {}
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": []
    },
    "scripts": {
        "clean": "rimraf assets/dist layoutist-core layoutist-core.zip",
        "pot": "wp-pot --domain 'layoutist-core' --package 'Layoutist Core' --dest-file 'languages/layoutist-core.pot' --src '**/*.php'",
        "build:css": "postcss assets/css/**/[!_]*.css --dir assets/dist/css",
        "build:js": "babel assets/js/**/[!_]*.js -d assets/dist/js",
        "build": "npm run clean",
        "copy": "copyfiles 'languages/*' 'assets/dist/**/*' 'assets/lib/**/*' 'includes/**/*' layoutist-core.php readme.txt layoutist-core",
        "zip": "zip-build --build-dir 'layoutist-core' --zip-dir '.' --template '%NAME%.%EXT%'",
        "release": "npm run build && npm run pot && npm run copy"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "autoprefixer": "^10.1.0",
        "copyfiles": "^2.4.1",
        "npm-watch": "^0.7.0",
        "postcss": "^8.2.4",
        "postcss-cli": "^8.3.1",
        "postcss-nested": "^5.0.3",
        "rimraf": "^3.0.2",
        "wp-pot-cli": "^1.5.0",
        "zip-build": "^1.4.0"
    }
}
